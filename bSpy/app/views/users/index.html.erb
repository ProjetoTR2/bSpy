
<div class="container maior">
    <p id="notice"><%= notice %></p>
    <% if can? :manage, User %>
    <br>
    <div class="row center-align">
        <h3 class="thin">Lista de usuários</h3>
    </div>
        <table class="highlight">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= link_to 'Mostrar', user %></td>
                        <td><%= link_to 'Editar', edit_user_path(user) %></td>
                        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Deseja excluir este usuário' } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <br>

    <div class="actions center-align">
        <%= link_to 'Novo Usuário', new_user_path, :class=>"waves-effect waves-light btn"  %>
    </div>

    <% end %>
</div>

<footer class="page-footer blue-grey simples">
  <div class="row">
    <div class="col l3 offset-l9">
      <h6 class="white-text"><b>bSpy</b> Sistema de monitoramento</h6>
    </div>
  </div>
</footer>
