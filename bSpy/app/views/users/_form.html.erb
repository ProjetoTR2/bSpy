

<div class="container">
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <div class = "row">
            <div class="input-field col s6 offset-s3">
                <%= f.label :name, :for =>"name_field" %>
                <%= f.text_field :name, autofocus: true, :class => "validate", :id =>"name_field" %>
            </div>
        </div>
        <div class = "row">
            <div class="input-field col s6 offset-s3">
                <%= f.label :email, :for =>"email_field" %>
                <%= f.text_field :email, autofocus: true, :class => "validate", :id =>"email_field" %>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6 offset-s3">
                <%= f.label :profile %><br />
                <%= f.select :profile_id, options_for_select(Profile.all.map { |c| [c.name, c.id] }), {class:   "browser-default"} %>
            </div>
        </div>
        <div class="row">
            <div class="col offset-l3">
          		  <%= link_to 'Voltar', users_path, :class=>"waves-effect waves-teal btn-flat" %>
            </div>
            <div class="actions col l2">
                <%= f.submit "Criar", :class=>"waves-effect waves-light btn" %>
            </div>
        </div>
    <% end %>
</div>
