

<div class="container">
    <%= form_for  @image, :url => "update", :method=>"post" do |f| %>
        <div class = "row"> 
            <div class="input-field col s6 offset-s3">
                <%= f.label :name, :for =>"name_field" %>
                <%= f.text_field :name, autofocus: true, :class => "validate", :id =>"name_field" %>
            </div>
        </div>

        <div class="actions center-align">
                <%= f.submit "Submit", :class=>"waves-effect waves-light btn" %>
        </div>
    <% end %>
</div>