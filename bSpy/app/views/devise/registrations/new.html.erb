<div class="container">
    <br>
    <div class="row center-align">
        <h3 class="thin">Sign up</h3>
    </div>
    <div class="">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'valign'}) do |f| %>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <%= f.label :name, :for =>"name_field" %>
                    <%= f.text_field :name, autofocus: true, :class => "validate", :id =>"name_field" %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <%= f.label :email, :for =>"email_field" %>
                    <%= f.email_field :email, autofocus: true, :class => "validate", :id =>"email_field" %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <%= f.label :profile %><br />
                    <%= f.select :profile_id, options_for_select(Profile.all.map { |c| [c.name, c.id] }), {class: "browser-default"} %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <%= f.label :password, :for =>"pass_field"%>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "off",:id=>"pass_field" %>
                </div>
            </div>
            <div class="row center-align">
            <% if devise_mapping.rememberable? -%>
                <div class="input-field col s6 offset-s3">
                    <%= f.label :password_confirmation, :for=>"confirm" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", :id=>"confirm" %>
                </div>
            <% end -%> 
            </div >

            <div class="actions center-align">
                <%= f.submit "Sign up", :class=>"waves-effect waves-light btn" %>
            </div>
            <br>
            
            <div class = "row center-align">
                <%= render "devise/shared/links" %>
            </div>
        <% end %>
    </div>
</div>


