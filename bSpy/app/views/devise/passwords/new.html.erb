
<div class="container">
    <br>
    <div class="row center-align">
        <h3 class="thin">Forgot your password?</h3>
    </div>
    <div class="">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => {:class => 'valign'}) do |f| %>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <%= f.label :email, :for =>"email_field" %>
                    <%= f.email_field :email, autofocus: true, :class => "validate", :id =>"email_field" %>
                </div>
            </div>
            <div class="actions center-align">
			    <%= f.submit "Send me reset password instructions", :class=>"waves-effect waves-light btn" %>
			</div>	

            
        <% end %>
    </div>
</div>

