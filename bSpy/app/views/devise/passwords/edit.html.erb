<div class="container">
    <br>
    <div class="row center-align">
        <h3 class="thin">Change your password</h3>
    </div>
    <div class="">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :html => {:class => 'valign'}) do |f| %>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <%= f.label :password, :for =>"pass_field"%>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "off",:id=>"pass_field" %>
                </div>
            </div>
            <div class="row center-align">
            <% if devise_mapping.rememberable? -%>
                <div class="input-field col s6 offset-s3">
                    <%= f.label :password_confirmation, :for=>"confirm" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", :id=>"confirm" %>
                </div>
            <% end -%> 
            </div >

            <div class="actions center-align">
                <%= f.submit "Change my password", :class=>"waves-effect waves-light btn" %>
            </div>
            <br>
            
            <div class = "row center-align">
                <%= render "devise/shared/links" %>
            </div>
        <% end %>
    </div>
</div>


