

<div class="container">
    <p id="notice"><%= notice %></p>
    <% if can? :manage, Profile %>
    <br>
    <div class="row center-align">
        <h3 class="thin">Listing Profiles</h3>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @profiles.each do |profile| %>
            <tr>
                <td><%= profile.name %></td>
                <td><%= link_to 'Show', profile %></td>
                <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
                <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <div class="actions center-align">
        <%= link_to 'New Profile', new_profile_path, :class=>"waves-effect waves-light btn"  %>
    </div>
    
    <% end %>
</div>
