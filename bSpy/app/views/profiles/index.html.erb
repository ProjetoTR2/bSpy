

<div class="container maior">
    <p id="notice"><%= notice %></p>
    <% if can? :manage, Profile %>
    <br>
    <div class="row center-align">
        <h3 class="thin">Lista de perfis</h3>
    </div>
    <table class="highlight">
        <thead>
            <tr>
                <th>Nome</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @profiles.each do |profile| %>
            <tr>
                <td><%= profile.name %></td>
                <td><%= link_to 'Mostrar', profile %></td>
                <td><%= link_to 'Editar', edit_profile_path(profile) %></td>
                <td><%= link_to 'Excluir', profile, method: :delete, data: { confirm: 'Deseja excluir este perfil?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <div class="actions center-align">
        <%= link_to 'Novo perfil', new_profile_path, :class=>"waves-effect waves-light btn"  %>
    </div>

    <% end %>
</div>

<footer class="page-footer blue-grey simples">
  <div class="row">
    <div class="col l3 offset-l9">
      <h6 class="white-text"><b>bSpy</b> Sistema de monitoramento</h6>
    </div>
  </div>
</footer>
